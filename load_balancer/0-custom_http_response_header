#!/usr/bin/env bash
# Configures Nginx to add custom X-Served-By header with server hostname

# Update package list and install Nginx if not already installed
sudo apt-get update -q
sudo apt-get install -y nginx

# Create Nginx configuration with custom header
sudo tee /etc/nginx/conf.d/custom_header.conf > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    add_header X-Served-By \$hostname;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Ensure default configuration is removed
sudo rm -f /etc/nginx/sites-enabled/default

# Test configuration and restart Nginx
sudo nginx -t && sudo systemctl restart nginx
